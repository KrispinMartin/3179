{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 350,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/KrispinMartin/3179/refs/heads/main/data/drug_bar.csv"
  },
  "params": [
    {
      "name": "type_highlight",
      "select": {
        "type": "point",
        "fields": ["Drug Type"]
      }
    }
  ],
  "mark": "bar",
  "encoding": {
    "y": {
      "field": "Drug Type",
      "type": "nominal",
      "sort": "-x"
    },
    "x": {
      "aggregate": "sum",
      "field": "Total Offences",
      "type": "quantitative",
      "title": "Total Offences"
    },
    "color": {
      "field": "Drug Type",
      "type": "nominal",
      "scale": {
        "domain": [
          "Cannabis",
          "Depressants",
          "Methylamphetamine",
          "Other Stimulants",
          "Other/Unclassified",
          "Prescription"
        ],
        "range": [
          "#4F7942",
          "#CCCC00",
          "#0080FF",
          "#fc8d62",
          "#8da0cb",
          "#DE3163"
        ]
      },
      "legend": null
    },
    "opacity": {
      "condition": { "param": "type_highlight", "value": 1 },
      "value": 0.4
    },
    "tooltip": [
      { "field": "Drug Type", "type": "nominal" },
      {
        "field": "Total Offences",
        "type": "quantitative",
        "title": "Total Offences",
        "format": ","
      }
    ]
  }
}

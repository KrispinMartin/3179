{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 900,
  "height": 450,
  "background": "transparent",
  "config": {
    "view": {
      "stroke": "transparent"
    }
  },
  "data": {
    "url": "https://raw.githubusercontent.com/KrispinMartin/3179/refs/heads/main/worldmap/ne_110m_admin_0_countries.json",
    "format": { "type": "topojson", "feature": "ne_110m_admin_0_countries" }
  },
  "projection": { "type": "equalEarth", "rotate": [-10, 0, 0] },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/KrispinMartin/3179/refs/heads/main/worldmap/ne_110m_ocean.json",
        "format": { "type": "topojson", "feature": "oceans" }
      },
      "mark": { "type": "geoshape", "fill": "lightblue" }
    },
    {
      "transform": [
        {
          "calculate": "'Data unavailable for ' + datum.properties.NAME_LONG",
          "as": "unavailable"
        }
      ],
      "mark": {
        "type": "geoshape",
        "fill": "grey",
        "stroke": "white"
      },
      "encoding": {
        "tooltip": { "field": "unavailable", "type": "nominal" }
      }
    },
    {
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/KrispinMartin/3179/refs/heads/main/data/choroplethmap.csv"
            },
            "key": "Country"
          },
          "as": "geo"
        }
      ],
      "mark": { "type": "geoshape", "stroke": "white", "strokeWidth": 0.75},
      "encoding": {
        "color": {
          "field": "geo.['Criminality 2023']",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [4, 5, 6, 7, 10],
            "range": ["#fee5d9", "#fcae91", "#fb6a4a", "#de2d26", "#a50f15"]
          },
          "legend": { "title": "Criminality Score", "orient": "left" }
        },
        "tooltip": [
          {
            "field": "properties.NAME_LONG",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "geo.['Criminality 2023']",
            "type": "quantitative",
            "format": ".2f",
            "title": "Criminality Score 2023"
          },
          {
            "field": "properties.CONTINENT",
            "type": "nominal",
            "title": "Continent"
          },
          {
            "field": "properties.SUBREGION",
            "type": "nominal",
            "title": "Region"
          }
        ]
      }
    },
    
    {
      "data": {
        "url": "https://raw.githubusercontent.com/KrispinMartin/3179/refs/heads/main/worldmap/ne_110m_graticules_30.json",
        "format": { "type": "topojson", "feature": "ne_110m_graticules_30" }
      },
      "mark": { "type": "geoshape", "fill": null, "stroke": "grey" }
    }
  ]
}

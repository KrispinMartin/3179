{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Criminality Score of Countries",
    "width": 800,
    "height": 400,
    "data":{"url": "https://raw.githubusercontent.com/KrispinMartin/3179/refs/heads/main/data/choroplethmap.csv"},
    "projection": {"type": "equalEarth", "rotate": [-150, 0, 0]},
    "layer":[
        {
            "data": {
            "url": "https://raw.githubusercontent.com/KrispinMartin/3179/refs/heads/main/worldmap/ne_10m.topojson",
            "format": {"type": "topojson", "feature": "ne_10m_admin_0_countries"}
            },
            "mark": {"type": "geoshape", "fill": "black", "stroke": "slategrey"}
        },
        {
            "data": {
            "url": "https://raw.githubusercontent.com/KrispinMartin/3179/refs/heads/main/worldmap/ne_10m.topojson",
            "format": {"type": "topojson", "feature": "ne_10m_ocean"}
            },
            "mark": {"type": "geoshape", "fill": "skyblue"}
        },
        {
            "data": {
            "url": "https://raw.githubusercontent.com/KrispinMartin/3179/refs/heads/main/worldmap/ne_10m.topojson",
            "format": {"type": "topojson", "feature": "ne_10m_graticules_30"}
            },
            "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
        },
        {
            "data": {
            "url": "https://raw.githubusercontent.com/KrispinMartin/3179/refs/heads/main/worldmap/ne_10m.topojson",
            "format": {"type": "topojson", "feature": "ne_10m_admin_0_countries"}
            },
            "transform": [
            {
                "lookup": "properties.NAME",
                "from": {
                "data": {
                    "url": "https://raw.githubusercontent.com/KrispinMartin/3179/refs/heads/main/data/choroplethmap.csv"
                },
                "key": "Country",
                "fields": ["Criminality 2023"]
                }
            }
            ],
            "mark": {"type": "geoshape"},
            "encoding": {
            "color": {
                "field": "Criminality 2023",
                "type": "quantitative",
                "scale": {"type": "threshold", 
                        "domain": [2, 4, 6, 8], 
                        "range": ["#fee5d9", "#fcae91", "#fb6a4a", "#cb181d"]
                    }
            },
            "tooltip": [
                {"field": "properties.NAME", "type": "nominal", "title": "Country"},
                {"field": "Criminality 2023", "type": "quantitative", "format": ".2f"},
                {"field": "Continent", "type": "nominal"},
                {"field": "Region", "type": "nominal"}
            ]
            }
        }
    ]
}
{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 600,
  "projection": { "type": "mercator" },
  "params": [
    {
      "name": "select_year",
      "value": 2023,
      "bind": {
        "input": "range",
        "min": 2013,
        "max": 2023,
        "step": 1,
        "name": "Change Year "
      }
    }
  ],
  "data": {
    "url": "https://raw.githubusercontent.com/KrispinMartin/3179/refs/heads/main/data/ausimprisonment.csv"
  },
  "transform": [
    {
      "lookup": "State",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/KrispinMartin/3179/refs/heads/main/ausmap/ne_50m_admin_1_states_provinces.topojson",
          "format": {
            "type": "topojson",
            "feature": "ne_50m_admin_1_states_provinces"
          }
        },
        "key": "properties.name"
      },
      "as": "geo"
    },
    { "filter": "datum.Year == select_year" }
  ],
  "layer": [
    {
      "mark": { "type": "geoshape", "stroke": "black", "strokeWidth": 1 },
      "encoding": {
        "shape": {
          "field": "geo",
          "type": "geojson"
        },
        "color": {
          "field": "Male Imprisonment Rate",
          "type": "quantitative",
          "scale": {
            "domain": [100, 1000],
            "type": "log",
            "range": [
              "#edf8fb",
              "#bfd3e6",
              "#9ebcda",
              "#8c96c6",
              "#8856a7",
              "#810f7c",
              "a50f15"
            ],
            "clamp": true
          }
        },
        "opacity": { "value": 0.85},
        "tooltip": [
          { "field": "State", "type": "nominal", "title": "State" },
          {
            "field": "Male Imprisonment Rate",
            "type": "quantitative",
            "title": "Male Prisoners per 100,000",
            "format": ","
          },
          {
            "field": "Female Imprisonment Rate",
            "type": "quantitative",
            "title": "Female Prisoners per 100,000",
            "format": ","
          },
          { "field": "Total Prisoners", "type": "quantitative", "format": "," },
          { "field": "Year", "type": "quantitative" }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "fontSize": 10.5,
        "color": "black",
        "fontWeight": "bold",
        "align": "center",
        "dy": -10,
        "dx": -3
      },
      "encoding": {
        "text": { "field": "geo.properties.name", "type": "nominal" },
        "longitude": {
          "field": "geo.properties.longitude",
          "type": "quantitative"
        },
        "latitude": {
          "field": "geo.properties.latitude",
          "type": "quantitative"
        }
      }
    }
  ]
}

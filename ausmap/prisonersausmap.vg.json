{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 600,
    "projection": {"type": "mercator"},
    "params":[
        {
        "name": "select_year",
        "value": 2023,
        "bind": {
            "input": "range",
            "min": 2013,
            "max": 2023,
            "step": 1,
            "name": "Select Year "
        }
        }
    ],
    "data": {
        "url": "ne/ne_50m_admin_1_states_provinces.topojson",
        "format": {
            "type": "topojson", "feature": "ne_50m_admin_1_states_provinces"
        }
    },
    "transform": [
        {
            "lookup": "properties.name",
            "from": {
                "data": {
                    "url": "https://raw.githubusercontent.com/KrispinMartin/3179/refs/heads/main/data/ausimprisonment.csv"
                },
                "key": "State",
                "fields": ["Male Imprisonment Rate", "Year", "Total Prisoners", "Female Imprisonment Rate"]
            }
        },
        {
            "filter": "datum.Year == select_year"
        }
    ],
    "layer": [
    {
      "mark":{
        "type": "geoshape",
        "stroke": "white",        
        "strokeWidth": 2     
      },
      "encoding": {
        "color": {
          "field": "Male Imprisonment Rate",
          "type": "quantitative",
          "scale": {
            "range": ["#fef0d9", "#fdd49e", "#fdbb84", "#fc8d50", "#ef6548", "#d7301f", "#990000"]
          }
        },
        "tooltip": [
          { "field": "properties.name", "type": "nominal", "title": "State" },
          { "field": "Male Imprisonment Rate", "type": "quantitative", "title": "Male Imprisonment per 100,000" },
          { "field": "Female Imprisonment Rate", "type": "quantitative", "title":"Female Imprisonment per 100,000" },
          { "field": "Total Prisoners", "type": "quantitative" },
          { "field": "Year", "type": "quantitative" }
        ]
      }
    },
    {
      "mark": { "type": "text", "fontSize": 11, "fontWeight": "bold", "align": "center", "dy": -5 },
      "encoding": {
        "text": { "field": "properties.name", "type": "nominal" },
        "longitude": { "field": "properties.longitude", "type": "quantitative" },
        "latitude": { "field": "properties.latitude", "type": "quantitative" }
      }
    }
  ]
}

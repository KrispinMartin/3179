{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 600,
    "projection": {"type": "mercator"},
    "params":[
        {
        "name": "select_year",
        "value": 2023,
        "bind": {
            "input": "range",
            "min": 2013,
            "max": 2023,
            "step": 1,
            "name": "Select Year "
        }
        }
    ],
    "data": {
        "url": "ne.topojson",
        "format": {
            "type": "topojson", "feature": "ne_50m_admin_1_states_provinces"
        }
    },
    "transform": [
        {
            "lookup": "properties.name",
            "from": {
                "data": {
                    "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/ausmap/prisonersausmap.csv"
                },
                "key": "State",
                "fields": ["Male Imprisonment Rate", "Year"]
            }
        },
        {
            "filter": "datum.Year == select_year"
        }
    ],
    "mark": {
        "type": "geoshape",
        "stroke": "lightblue",
        "strokeWidth": 0.5
    }
}
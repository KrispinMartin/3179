{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "width": 700,
  "height": 400,
  "padding": 5,
  "signals": [
    {
      "name": "selectView",
      "value": "squarify",
      "bind": {
        "input": "select",
        "options": ["squarify", "binary"],
        "name": "View: "
      }
    },
    {
      "name": "selectedYear",
      "value": 2015,
      "bind": {
        "input": "range",
        "min": 2015,
        "max": 2024,
        "step": 1,
        "name": "Year:  "
      }
    }
  ],

  "data": [
    {
      "name": "viccrime",
      "url": "https://raw.githubusercontent.com/KrispinMartin/3179/refs/heads/main/data/offencesbysubdivyear.csv",
      "format": { "type": "csv" },
      "transform": [
        {
          "type": "filter",
          "expr": "datum.Year == selectedYear"
        },
        { "type": "nest", "keys": ["Offence Division", "Offence Subdivision"] },
        {
          "type": "treemap",
          "field": "Total Offences",
          "method": { "signal": "selectView" },
          "ratio": 0.2,
          "paddingInner": 1,
          "size": [{ "signal": "width" }, { "signal": "height" }]
        }
      ]
    }
  ],

  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": { "data": "viccrime", "field": "Offence Division" },
      "range": [
        "#66c2a5",
        "#fc8d62",
        "#ffd92f",
        "#e78ac3",
        "#a6d854",
        "#8da0cb "
      ]
    }
  ],

  "marks": [
    {
      "type": "rect",
      "from": { "data": "viccrime" },
      "encode": {
        "update": {
          "fill": {
            "scale": "color",
            "field": "Offence Division",
            "opacity": 0.5
          },
          "x": { "field": "x0" },
          "x2": { "field": "x1" },
          "y": { "field": "y0" },
          "y2": { "field": "y1" },
          "tooltip": {
          "signal": "{'Offence Division': datum['Offence Division'], 'Offence Subdivision': datum['Offence Subdivision'], 'Total Offences':  format(datum['Total Offences'], ','), 'Year': datum.Year}"
          }
        }
      }
    }
  ]
}

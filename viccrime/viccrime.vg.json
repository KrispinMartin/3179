{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 300, "height": 200,
  "data": {"url": "https://raw.githubusercontent.com/KrispinMartin/3179/refs/heads/main/data/offencebydivyear.csv"},
  "mark": "area",
  "encoding": {
    "x": {
      "field": "Year", 
      "type": "ordinal",
      "axis": {"format": "%Y", "title": "Year"}
    },
    "y": {
      "aggregate": "sum", 
      "field": "Offence Count",
      "axis": {"title": "Total Offence Count"}
    },
    "color": {
      "field": "Offence Division",
      "type": "nominal",
      "scale": {"scheme": "category20b"},
      "legend": {"title": "Offence Division"}
    }
  }
}
